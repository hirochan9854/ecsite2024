---
const { item } = Astro.props;
---

<li
  class={`hover:opacity-60 transition p-3 relative ${
    item.state === false ? 'opacity-50' : ''
  }`}
>
  {item.state === false ? (
    <div class="flex flex-col h-full pointer-events-none">
      <div class="p-2">
        <img
          src={`/03_ecsite/images/${item.itemphotos[0]}`}
          alt={item.name}
          class="max-h-80 mx-auto"
        />
      </div>
      <div class="flex items-center">
        <h2 class="text-xl font-normal">{item.name}</h2>
        {item.memberOnly === true && (
          <p class="bg-pink-400 text-white text-sm inline py-1 px-3 rounded-md ml-3">
            会員限定
          </p>
        )}
      </div>
      <p class="mt-2 text-base">{item.text}</p>
      <div class="flex items-center text-red-400 mt-auto">
        <p class="font-extrabold">¥{item.price}</p>
        <small class="ml-1">税込み</small>
      </div>
      <div class="absolute inset-0 bg-gray-400 bg-opacity-50 flex justify-center items-center">
        <p class="text-black font-bold text-2xl">SOLD OUT</p>
      </div>
    </div>
  ) : (
    <a href={`/03_ecsite/goods/${item.url}`} class="flex flex-col h-full">
      <div class="p-2">
        <img
          src={`/03_ecsite/images/${item.itemphotos[0]}`}
          alt={item.name}
          class="max-h-80 mx-auto"
        />
      </div>
      <div class="flex items-center">
        <h2 class="text-xl font-normal">{item.name}</h2>
        {item.memberOnly === true && (
          <p class="bg-pink-400 text-white text-sm inline py-1 px-3 rounded-md ml-3">
            会員限定
          </p>
        )}
      </div>
      <p class="mt-2 text-base">{item.text}</p>
      <div class="flex items-center text-red-400 mt-auto">
        <p class="font-extrabold">¥{item.price}</p>
        <small class="ml-1">税込み</small>
      </div>
    </a>
  )}
</li>