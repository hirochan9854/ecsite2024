---
const { item } = Astro.props;
---

<li
  class={`hover:bg-slate-100 transition p-3 relative ${
    item.state === false ? 'opacity-50' : ''
  }`}
>
  <a href={`./goods/${item.url}`} class="block">
    <h2 class="text-lg font-bold">{item.name}</h2>
    <div class="p-2">
      <img
        src={`/images/${item.itemphotos[0]}`}
        alt={item.name}
        class="w-full h-auto"
      />
    </div>
    <p class="mt-2">{item.text}</p>
    <div class="flex items-center mt-3">
      <p class="font-extrabold">{item.price}円</p>
      <small class="text-gray-800">税込み</small>
    </div>
  </a>
  {item.state === false && (
    <div class="absolute inset-0 bg-gray-400 bg-opacity-50 flex justify-center items-center">
      <p class="text-black font-bold text-2xl">SOLD OUT</p>
    </div>
  )}
</li>
